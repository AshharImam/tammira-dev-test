{
  "extends": "@react-native/typescript-config",
  "include": ["**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "strict": true,
    // Path alias config
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
      "assets/*": ["src/assets/*"],
      "components/*": ["src/components/*"],
      "navigations/*": ["src/navigations/*"],
      "screens/*": ["src/screens/*"],
      "utils/*": ["src/utils/*"],
      "store/*": ["src/store/*"],
      "hooks/*": ["src/hooks/*"],
      "api/*": ["src/api/*"]
    }
  },
  "exclude": ["**/node_modules", "**/Pods"]
}
